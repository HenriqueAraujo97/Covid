<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewPacintes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tabela_pacientes"
        android:gravity="center"
        android:shadowColor="@color/cabecalho"
        android:text="Paciente"
        android:textColor="@color/cabecalho"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tabela_pacientes"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tabela_pacientes"
        android:ems="10"
        android:hint="Data De Nascimento"
        android:inputType="date" />

    <EditText
        android:id="@+id/editTextNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tabela_pacientes"
        android:ems="10"
        android:hint="NÃºmero"
        android:inputType="number" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tabela_pacientes"
        android:onClick="guardarPaciente"
        android:text="Guardar"
        app:backgroundTint="@color/botao" />

</LinearLayout>