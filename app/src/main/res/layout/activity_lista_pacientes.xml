<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
        android:id="@+id/name_paciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome" />

    <EditText
        android:id="@+id/age_paciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Nascimento"
        android:inputType="date" />

    <EditText
        android:id="@+id/email_paciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textWebEmailAddress" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdd_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="add_paciente"
            android:text="Adicionar" />

        <Button
            android:id="@+id/btnUpdate_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="update_paciente"
            android:text="Atualizar" />

        <Button
            android:id="@+id/btnDelete_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="delete_paciente"
            android:text="Apagar" />
    </LinearLayout>


</LinearLayout>